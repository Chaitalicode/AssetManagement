			<Input width="250px" id="emlId" placeholder="{i18n>email}"></Input>
			<Input width="250px" id="pwdId" type="Password" placeholder="{i18n>password}"></Input>
			<Button width="100%" text="{i18n>Login}" icon="sap-icon://visits" press="onLogin1" type="Accept"></Button>
			</VBox>
			</VBox>
			</l:VerticalLayout>
		
					</content>
					<footer>
					<Bar>
						<contentMiddle>
						<Button icon="sap-icon://endoscopy" text="Copyright"></Button>
						<Text text="Support Portal"></Text>
