<mvc:View
    controllerName="am.assetmanagment.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
>
	<!-- <Shell id="shell"> -->
		<!-- <App id="app">
			<pages> -->
				<Page showFooter="true"  class="page1" showHeader="false" backgroundDesign="Transparent" title="{i18n>title}">
				<tnt:ToolHeader >
					<Image id="abc22" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/SAP_2011_logo.svg/1200px-SAP_2011_logo.svg.png" class="logoimage"/>
					<ToolbarSpacer/>
					<Text class="txt" text="ASSETS MANAGEMENT"/>
					<ToolbarSpacer/>
				</tnt:ToolHeader>
					<content> 
						
			
			<l:VerticalLayout class="sapUiLargeMarginTop" width="100%">
			<VBox class="sapUiLargeMarginTop" >
