<mvc:View
    controllerName="am.assetmanagment.controller.Employee"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"        
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:goals="sap.uxap.sample.SharedBlocks.goals"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
    xmlns:ux="sap.uxap"
    height="100%"
>

	<Shell id="shellI">
		<App id="appEmp">
			<pages>
				<Page id="page" showHeader="false"  showNavButton="true" navButtonPress="onNav"  title="{i18n>title}">
					<content> 
	
				<ux:ObjectPageLayout id="ObjectPageLayout"	showTitleInHeaderContent="true"	showEditHeaderButton="true"	editHeaderButtonPress="handleEditBtnPress"	upperCaseAnchorBar="false" >      

            <ux:headerTitle>
		    	<ux:ObjectPageDynamicHeaderTitle>
					
                    	<ux:expandedContent>
						<Toolbar >
						
					<Text text="{main>desig}"/>					
						<ToolbarSpacer/>
					  <Button text="Notification" icon="sap-icon://bell" press="onNotification"></Button>
					   <Button text="Logout" icon="sap-icon://log" press="onLogout"></Button>
					</Toolbar>
				</ux:expandedContent>

			
			</ux:ObjectPageDynamicHeaderTitle>
		</ux:headerTitle>
    <ux:headerContent>
		<FlexBox wrap="Wrap">
				
	        <Avatar class="sapUiSmallMarginEnd" src="https://4.bp.blogspot.com/-3giIUKzKAPs/WpuZ7HDYCGI/AAAAAAAADXE/x2vNiOPZzJcYC_AnKTBgy2Vw7wXi5cD7wCLcBGAs/s1600/professional-woman-photo.jpg"  displaySize="L" />
					<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
						<Link text="91+ {main>phone}"/>
						<Link text="{main>email}"/>
					</layout:VerticalLayout>

				

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<Label text="{main>description}"/>
					<VBox>
						<Label text="Achieved goals"/>
						<ProgressIndicator percentValue="30" displayValue="30%"/>
					</VBox>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<Label text="{main>city} , {main>state}"/>
				</layout:VerticalLayout>
		</FlexBox>
	</ux:headerContent>

    
    <ux:sections>
			<ux:ObjectPageSection titleUppercase="false" id="perslnalSection" title="Personal Information">
                <ux:subSections>
                    <ux:ObjectPageSubSection id="goalsSectionSS1">
	                   <ux:blocks>
                  		<forms:SimpleForm layout="ColumnLayout"  width="50%">                               
		                  <core:Title text="Address"/>

		                  <Label text="Home Address"/>
		                  <Text text="{main>Paddr}"/>

                          <Label text="Current Address" class="sapUiSmallMarginBeginBegin"/>
		                  <Text text="{main>Caddr}"/>
     

		                  <Label text="Phone Number"/>
		                  <Text text="+{main>phone}"/>

	                    </forms:SimpleForm>

                           <forms:SimpleForm editable="false" labelSpanL="4" labelSpanM="4"  labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"  maxContainerCols="3" width="100%">
		                      <core:Title text="Office"/>

		                      <Label text="DOJ"/>
	                          <Text text="{main>doj}"/>

		                      <Label text="DOR"/>
		                      <Text text="{main>dor}"/>

                              <Label text="Email"/>
		                      <Text text="{main>email}"/>    	 
                            </forms:SimpleForm>   
        
                                  <forms:SimpleForm editable="false" labelSpanL="4" labelSpanM="4"  labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"  maxContainerCols="3" width="100%">
		                              <core:Title text="Social Accounts"/>
		                              <Label text="LinkedIn"/>
		                              <Text text="{main>linkedIn}"/>

		                              <Label text="Twitter"/>
		                              <Text text="{main>twitter}"/>
	                              </forms:SimpleForm>
	                    </ux:blocks>
                    </ux:ObjectPageSubSection>
                </ux:subSections>
            </ux:ObjectPageSection>


            <!-- .................. -->

           <ux:ObjectPageSection titleUppercase="false"  title="Assest">
               	<ux:subSections>
					<ux:ObjectPageSubSection id="AssestSectionSS1">
						<ux:blocks>
                        	<Table id="idAssetTable" inset="false">
        	<columns>
			<Column
				width="12em">
				<Text text="Asset Id" />
			</Column>
            <Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Asset Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Asset Type" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Asset Priority" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Date of Alloted Asset" />
			</Column>
			<Column
				hAlign="End">
				<Text text="Status" />
			</Column>
		</columns>
        <items>
        <ColumnListItem id="columnID">
        <cells>
        <Text text="{main>id}"></Text>
         <Text text="{main>name}"></Text>
          <Text text="{main>type}"></Text>
           <Text text="{main>priority}"></Text>
            <Text text="{main>DOA}"></Text>
             <Text text="{main>status}"></Text>
        </cells>
        </ColumnListItem>
        </items>
        </Table>
						
						</ux:blocks>
					</ux:ObjectPageSubSection>
				</ux:subSections>
           </ux:ObjectPageSection>




        </ux:sections>
			
        </ux:ObjectPageLayout>				
			</content>
				<footer>
			         <OverflowToolbar>
			         <ToolbarSpacer />
			         <Button type="Accept" text="Raise Ticket" press="onRaiseTicket"/>
				   
			         </OverflowToolbar>
		       </footer>	
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
