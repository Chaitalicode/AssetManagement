<core:FragmentDefinition xmlns="sap.m"	xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"  xmlns:viz="sap.viz.ui5.controls"  xmlns:viz.data="sap.viz.ui5.data"  xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"	xmlns:f="sap.ui.layout.form">
	<ResponsivePopover 
		title="Requests"
		class="sapUiPopupWithPadding"
		placement="Bottom" showCloseButton="true" afterClose="onAfterClose" >
	<List showNoData="false" items="{main>/NewReqAsst}">
	    <NotificationListItem
				title="Employee with ID {main>empID} has requested for {main>nwItem}"
				description="{main>name}"
				authorPicture="{main>img}"
				showCloseButton="true"
				unread="true"
				priority="None"
				counter="1"
				close=".onItemClose"
				press=".onListItemPress"
				>
				
                
		</NotificationListItem>
	</List>
		<List showNoData="false" items="{main>/OldAssestReq}">
	    <NotificationListItem
				title="Employee with ID {main>empId} has requested for {main>comboItem} Replacement"
				description="{main>empName}"
				authorPicture="{main>usrImg}"
				showCloseButton="true"
				unread="true"
				priority="None"
				counter="1"
				close=".onItemClose"
				press=".onListItemPress"
				>
			
                
		</NotificationListItem>
	</List>
    </ResponsivePopover>
</core:FragmentDefinition>